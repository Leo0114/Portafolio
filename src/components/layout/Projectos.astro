---
import Imagen from "@components/layout/Imagen.astro";
import { Image } from "astro:assets";
import { type CollectionEntry } from "astro:content";
type Props = {
  projects: CollectionEntry<"projects">[];
};
const { projects } = Astro.props;
---

<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
  {
    projects.map((project) => {
      const route = `/Portafolio/projects/${project.slug}`;
      const imagenes = `project ${project.slug} image`;
      const titulo = `project ${project.slug} title`;

      return (
        <>
          <a
            href={route}
            class="rounded-lg border shadow-md bg-slate-800/50 border-slate-700/50 hover:scale-105 hover:bg-slate-800 hover:border-slate-500 transition flex flex-col"
          >
            <picture class="flex justify-center p-4">
              <Imagen
                transition={imagenes}
                ImgClass="rounded-lg  w-[300px] h-[200px] object-cover transition-all duration-200"
                img={project.data.cover}
                alt={project.data.coverAlt}
              />
            </picture>

            <div class="p-4 flex-grow mx-auto text-center">
              <h2
                class=" text-xl font-bold tracking-tight text-white"
                transition:name={titulo}
              >
                {project.data.title}
              </h2>
            </div>
          </a>
        </>
      );
    })
  }
</div>
